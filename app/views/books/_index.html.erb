<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <% books.each do |book| %>
        <!--books/から引き渡された@booksがbooks-->
        <td>
          <%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
        <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <% end %>
      </tr>
  </tbody>
</table>